<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
    <listeners>
        <listener class-name="listeners.TestFilterListener"/>
    </listeners>

    <parameter name="VIDEO_RECORDING" value="false"/>
    <parameter name="CalendarName" value="Calendar.xlsx"/>
    <parameter name="browserName" value="ie"/>

    <!-- Cucumber Test -->
    <test name="TestForUsage" enabled="true">
        <classes>
            <class name="com.project.runner.TestRunnerForUsage"/>
        </classes>
    </test>
    <test name="TestForSelenium" enabled="true">
        <classes>
            <class name="com.project.runner.SeleniumRunner"/>
        </classes>
    </test>
    <test name="TestForBilling" enabled="true">
        <classes>
            <class name="com.project.runner.TestRunnerForXLog"/>
        </classes>
    </test>
    <test name="TestForPDF" enabled="true">
        <classes>
            <class name="com.project.runner.TestRunnerForPDF"/>
        </classes>
    </test>
    <test name="TestForDonation" enabled="true">
        <classes>
            <class name="com.project.runner.TestRunnerForDonation"/>
        </classes>
    </test>
    <!-- Cucumber Test -->
</suite>